---
import { getPreferredEntry } from "../lib/i18n";
const t = await getPreferredEntry(Astro);
---

<nav class="font-sams lg:h-[100vh] sm:h-[20vh] text-div-bg">
    <ul class= "lg:w-[37vw] sm:w-[100vw] flex sm:flex-row float-end justify-between px-5 list-none py-3 z-10 sticky top-0">
        
        <button class="nav-link font-bold opacity-100 relative lg:text-[1.8vw] sm:text-[4vw] no-underline flex justify-center float-end bg-div-bg rounded-md bg-opacity-40 pr-2 pl-2 hover:bg-opacity-60">
            <a href= "/hackathons" class="no-underline"> <slot class="navbar-item"> Join </slot> </a>
        </button>

        <li class="nav-link font-bold opacity-75 relative lg:text-[1.8vw] sm:text-[4vw] no-underline flex float-end">
                <a href= "/" class="no-underline"> <slot class="navbar-item"> Home Page </slot> </a>
        </li>
    
        <li class="nav-link font-bold opacity-75 relative lg:text-[1.8vw] sm:text-[4vw] no-underline flex float-end">
                <a href= "/eurohacks" class="no-underline"> <slot class="navbar-item"> Eurohacks </slot> </a>
        </li>
    
        <li class="nav-link font-bold opacity-75 relative lg:text-[1.8vw] sm:text-[4vw] no-underline flex float-end">
                <a href= "/hackathons" class="no-underline"> <slot class="navbar-item"> Hackathons </slot> </a>
        </li>
    </ul>

    <img src="../../Banner.png" class="absolute w-max" alt="Banner" />
</nav>

<style>
.nav-link::before {
    transition: 1000ms;
    height: 4px;
    content: "";
    position: absolute;
    background-color: rgb(255, 245, 232);
    width: 0%;
    bottom: -1px;
}

@media screen and (max-width: 1000px) {
    .nav-link::before {
        height: 3px;
    }
}

li.nav-link:hover::before {
    width: 100%;
}

button.nav-link:hover::before {
    width: 0%;
}

</style>