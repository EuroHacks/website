---
let { city, discordlink, telephone, country, countrytitle, image, rsvp_page, info_page, background} = Astro.props
---

<div class="hackathon-card font-bold bg-marine-sapphire w-[90vw] max-h-[21vw] my-4vw mx-5vw rounded-2xl justify-center">

    <div class="flex flex-col justify-evenly">

        <div class="flex flex-row w-90vw justify-around items-center -mb-[2vw]">

            <div class="flex flex-row items-center justify-between m-3 text-soft-peach">
                <img src={image} class="w-[6vw] h-[6vw]">
                <div class="text-7xl my-5 ml-4"> {countrytitle} </div>
            </div>

            <div class="flex flex-row m-3 text-soft-peach"> 
                <h1 class="flex flex-row text-5xl"> <i class="fa-solid fa-location-dot mr-3"> </i> {city} </h1>
            </div>

        </div>

        <div class="flex flex-row justify-around items-center w-[90vw]">

            <div class="text-3xl my-3 ml-4 text-soft-peach">

                <div> <i class="fa-solid fa-envelope mr-2 my-3"> </i> Mail: {country}@eurohacks.org </div>
                <div> <i class="fa-solid fa-phone mr-2 my-3">    </i> Telephone: {telephone}        </div>
                <div> <i class="fa-brands fa-discord mr-2 my-3"> </i> Discord/Slack: {discordlink}  </div>

            </div>

            <div class="flex flex-row justify-between text-5xl">

                <a href={info_page}>

                    <button class="h-[10vw] w-[24vw] text-4.5xl mx-3 bg-blanched-almond rounded-xl hover:bg-golden-sand"> 
                        <div class="button-icons flex flex-col items-start ml-[2%] mt-[4%]"> <i class="fa-solid fa-circle-info" id="button-icons"> </i> </div> More information 
                    </button> 

                </a>
                
                <a href={rsvp_page}> 
                    <button class="h-[10vw] w-[24vw] text-4.5xl mx-3 bg-blanched-almond rounded-xl hover:bg-golden-sand"> 
                        <div class="button-icons flex flex-col items-start ml-[2%] mt-[4%]"> <i class="fa-solid fa-user"> </i> </div> Participate 
                    </button> 
                </a>

            </div>
        </div>
    </div>
</div>


<style define:vars={{ image: `url("${background}")` }}>
    *:not(i){
        font-family: "Keania One";
    }
    .hackathon-card {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: 
            linear-gradient(to right, #fcc764 38%, rgba(0, 0, 0, 0.1) 100%),
            var(--image);
        background-size: 100% 100%, cover;
        background-position: center bottom;
        background-repeat: no-repeat;
        resize: horizontal;
    }
    .button-icons {
        transform: translateY(-80%);
    }
</style>