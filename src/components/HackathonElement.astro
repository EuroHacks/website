---
let { city, discordlink, telephone, country, countrytitle, image, rsvp_page, info_page} = Astro.props
---

<div class="hackathon-card font-bold bg-marine-sapphire w-90vw my-4vw mx-5vw rounded-2xl justify-center">
    <div class="flex flex-row justify-between">

        <div class="flex flex-col">
            <div class="flex flex-row m-3 text-soft-peach">
                <img src={image} width="90px" height="64px">
                <div class="text-5xl my-5 ml-4"> {countrytitle} </div>
            </div>
            <div class="text-3xl my-3 ml-4 text-soft-peach">
                <br> <i class="fa-solid fa-envelope mr-2 my-3"></i> Mail: {country}@eurohacks.org
                <br> <i class="fa-solid fa-phone mr-2 my-3"></i> Telephone: {telephone}
                <br> <i class="fa-brands fa-discord mr-1 my-3"></i> Discord/Slack: {discordlink}
            </div>
        </div>

        <div class="flex flex-col justify-center items-center">
            <h1 class="text-soft-peach flex text-4xl justify-end mr-10%"> <i class="fa-solid fa-location-dot mr-3"> </i> {city} </h1>
            <div class="flex justify-end items-end text-5xl mx-2 -mb-4">

                <a href={info_page}> 
                    <button class="h-160px w-360px text-4.5xl mx-3 mt-60px -mb-20px bg-frosted-blue rounded-xl hover:bg-frosted-sky"> 
                        <div class="button-icons flex flex-col items-start ml-1 -mb-4"> <i class="fa-solid fa-circle-info" id="button-icons"> </i> </div> More information 
                    </button> 
                </a>
                
                <a href={rsvp_page}> 
                    <button class="h-160px w-360px text-4.5xl mx-3 mt-60px -mb-20px bg-frosted-blue rounded-xl hover:bg-icy-mist"> 
                        <div class="button-icons flex flex-col items-start ml-1 -mb-4"> <i class="fa-solid fa-user"> </i> </div> Participate 
                    </button> 
                </a>

            </div>
        </div>
    </div>
</div>

<style>
    .button-icons {
        transform: translateY(-80%);
    }
</style>
