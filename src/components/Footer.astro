                <div class="flex flex-row mt-[1vw] mb-[2vw] text-footer-text">

                    <div class="mx-4">
                        <table class="text-[1.3vw]">
                            <tbody>
                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['footer.email.main']}: </td>
                                    <td> main@europehacks.org </td>
                                </tr>

                                <tr>
                                    <td class="flex justify-end mr-[2vw] mt-[1vw]">  </td>
                                </tr>

                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['event.italy.country']}: </td>
                                    <td> italy@europehacks.org </td>
                                </tr>
                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['event.germany.country']}: </td>
                                    <td> germany@europehacks.org </td>
                                </tr>
                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['event.greece.country']}: </td>
                                    <td> greece@europehacks.org </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="mx-4">
                        <table class="text-[1.3vw]">
                            <tbody>
                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['footer.email.questions']}: </td>
                                    <td> questions@europehacks.org </td>
                                </tr>

                                <tr>
                                    <td class="flex justify-end mr-[2vw] mt-[1vw]">  </td>
                                </tr>

                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['event.uk.country']}: </td>
                                    <td> uk@europehacks.org </td>
                                </tr>
                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['event.spain.country']}: </td>
                                    <td> spain@europehacks.org </td>
                                </tr>
                                <tr>
                                    <td class="flex justify-end mr-[2vw]"> {t['event.poland.country']}: </td>
                                    <td> poland@europehacks.org </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        <div class="flex flex-row items-center text-footer-link">
            <div class= "flex flex-col items-center">
                <div class= "flex flex-row my-[0.8vw] items-center">
                    <a href="https://www.instagram.com/eurohacks2025/"> <img src="../../instagram.png" title='#eurohacks2025' class="mx-[1.5vw] w-[8vw] sm:w-[4vw]"> </a>
                    <p class="text-[2vw]"> #eurohacks2025 </p>
                </div>
                <div class= "flex flex-row my-[0.8vw] items-center">
                    <a href=""> <img src="../../discord.png"   title='Coming soon' class="mx-[1.5vw] cursor-not-allowed w-[8vw] sm:w-[4vw]"> </a>
                    <p class="text-[2vw]"> #eurohacks2025 </p>
                </div>
                <div class= "flex flex-row my-[0.8vw] items-center">
                    <a href=""> <img src="../../youtube.png"   title='Coming soon' class="mx-[1.5vw] cursor-not-allowed w-[8vw] sm:w-[4vw]"> </a>
