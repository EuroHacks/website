---
import Layout from "../../layout/default.astro"
import AboutUsCard from "../../components/About_Us_Card.astro";
---

<Layout title="Eurohacks">

    <div class="hidden fixed top-0 left-0 w-[100%] h-[100%] bg-opacity-30 bg-black justify-center items-center z-50" id="info-modal">
        <div class="bg-orange-300 p-5 w-[90%] max-w-[60vw] rounded-2xl text-center relative shadow-[0_4px_10px_rgba(0,0,0,0.1)]">

            <button class="hover:text-[#222] absolute top-3 right-3 text-xl border-none cursor-pointer text-[#555]" id="close-modal"> &times; </button>
            <h2 class="text-[28px] mb-3"> Our Vision </h2>
            <p class="text-base text-[#555] mb-5"> 
                Creativity is a universal trait, and coding serves as a powerful medium for its expression. Through EuroHacks, we aim 
                to unite individuals in the pursuit of developing remarkable projects that showcase their innovative potential. It is 
                through the ingenuity and creative efforts of young minds that transformative change can be brought about in the world.
            </p>

        </div>
    </div>

    <script>
        const openWidnow = document.getElementById('open-window');
        const closeModal = document.getElementById('close-modal');
        const modal = document.getElementById('info-modal');

        openWidnow.addEventListener('click', () => {
            modal.style.display = 'flex';
        });

        closeModal.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
            }
        });
    </script>


    <style>
        .about-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .about-card .card-content {
            padding: 20px;
            text-align: center;
        }

        .about-card .card-content h3 {
            font-size: 1.5rem;
            color: #222;
            margin-bottom: 10px;
        }

        .about-card .card-content p {
            font-size: 0.95rem;
            color: #555;
        }

        .about-card img, .about-header, .cta {
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.6s ease;
        }

        .about-card img.visible, .about-header.visible, .cta.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .about-content {
                flex-direction: column;
            }

            .about-card {
                flex: 1 1 100%;
            }
        }
    </style>


    <div class="flex justify-center my-[5vh]">
        <div class="flex flex-wrap justify-between gap-[1.5vw] max-w-[92%]">

            <div class="about-card hover:-translate-y-3 bg-[#fff] rounded-xl overflow-hidden min-w-72 relative shadow-[0_4px_10px_rgba(0,0,0,0.1)] flex-[1_1_calc(33.33%_-_20px)] transition-transform duration-[0.3s] ease-[ease-in-out]" id="open-window">

                <img src="https://via.placeholder.com/400x200" alt="Our Mission">
                <div class="card-content">
                    <h3>Our Mission</h3>
                    <p>To create unforgettable experiences that bring people together through events and celebrations.</p>
                </div>

            </div>


            <div class="about-card hover:-translate-y-3 bg-[#fff] rounded-xl overflow-hidden min-w-72 relative shadow-[0_4px_10px_rgba(0,0,0,0.1)] flex-[1_1_calc(33.33%_-_20px)] transition-transform duration-[0.3s] ease-[ease-in-out]">
                <img src="https://via.placeholder.com/400x200" alt="Our Values">
                <div class="card-content">
                    <h3>Our Values</h3>
                    <p>Commitment to excellence, community engagement, and fostering creativity in every event we design.</p>
                </div>
            </div>


            <div class="about-card hover:-translate-y-3 bg-[#fff] rounded-xl overflow-hidden min-w-72 relative shadow-[0_4px_10px_rgba(0,0,0,0.1)] flex-[1_1_calc(33.33%_-_20px)] transition-transform duration-[0.3s] ease-[ease-in-out]">
                <img src="https://via.placeholder.com/400x200" alt="Our Team">
                <div class="card-content">
                    <h3>Our Team</h3>
                    <p>A passionate group of event planners, designers, and innovators dedicated to making your events magical.</p>
                </div>
            </div>

        </div>
    </div>

    <script>
        
        const elements = document.querySelectorAll('.about-card img, .about-header, .cta');

        function handleScroll() {
            elements.forEach((el) => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight) {
                    el.classList.add('visible');
                }
            });
        }

        window.addEventListener('scroll', handleScroll);
        handleScroll(); // Initial check on page load
    </script>

</Layout>